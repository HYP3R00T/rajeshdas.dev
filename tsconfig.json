{
    "extends": "astro/tsconfigs/strict",
    "include": [
        ".astro/types.d.ts",
        "**/*"
    ],
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@posts/*": [
                "./content/posts/*"
            ],
            "@certifications": [
                "./certifications.json"
            ],
            "@github": [
                "./github.json"
            ],
            "@project": [
                "./project.json"
            ]
        }
    }
}