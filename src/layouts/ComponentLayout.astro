---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import { render } from "astro:content";

interface Props {
  entry: CollectionEntry<"components">;
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const { title, description } = entry.data;
---

<BaseLayout title={`${title} - Components`} description={description}>
  <main class="mx-auto max-w-5xl px-6 py-16 md:px-12">
    <!-- Breadcrumb -->
    <nav
      class="text-foreground-2 mb-8 flex items-center gap-2 text-xs tracking-wide uppercase"
    >
      <a
        href="/"
        class="text-foreground-1 hover:text-foreground-0 transition-colors"
        >Home</a
      >
      <span>/</span>
      <a
        href="/components"
        class="text-foreground-1 hover:text-foreground-0 transition-colors"
      >
        Components
      </a>
      <span>/</span>
      <span class="text-foreground-0">{title}</span>
    </nav>

    <!-- Divider -->
    <div class="border-border mb-12 border-t"></div>

    <!-- Header -->
    <div class="mb-12 space-y-4">
      <h1
        class="text-foreground-0 text-5xl font-bold uppercase"
        style="font-family: 'Space Grotesk', sans-serif; line-height: 1.1;"
      >
        {title}
      </h1>
      <p class="text-foreground-1 text-base leading-relaxed">{description}</p>
    </div>

    <!-- Divider -->
    <div class="border-border mb-12 border-t"></div>

    <!-- Content -->
    <article class="prose prose-invert max-w-none space-y-8">
      <Content />
    </article>
  </main>
</BaseLayout>
