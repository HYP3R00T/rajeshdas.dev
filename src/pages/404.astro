---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/ui/Button.astro";
---

<BaseLayout>
  <section
    class="stripe-pattern-dense relative flex h-screen items-center justify-center px-4 py-12 md:px-12"
  >
    <div class="mx-auto w-full max-w-2xl">
      <div class="space-y-12 text-center">
        <!-- Large 404 display -->
        <div class="relative">
          <div
            class="text-foreground-1 md:text-48 font-display text-9xl leading-none font-black tracking-tighter select-none"
          >
            404
          </div>
        </div>

        <!-- Heading -->
        <div class="space-y-6">
          <h1 class="text-section-heading font-display text-center!">
            Lost in the void
          </h1>

          <!-- Witty message -->
          <div class="text-foreground-1 space-y-4">
            <p class="text-lg leading-relaxed md:text-xl">
              Looks like this page took an unplanned detour through a git
              rebase.
            </p>
            <p class="text-foreground-2 text-base">
              The file you're looking for has either been moved to a different
              branch, deleted, or never existed in the first place. Kind of like
              Docker layers you forgot to clean up.
            </p>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col justify-center gap-4 pt-6 sm:flex-row">
          <Button variant="default" size="lg" as="a" href="/">
            Go back home
          </Button>
          <Button variant="secondary" size="lg" as="a" href="/#projects">
            Check my projects
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
