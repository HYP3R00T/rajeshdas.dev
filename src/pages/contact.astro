---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Social from "@/components/core/Social.astro";
import { Icon } from "astro-icon/components";
import Button from "@/components/ui/Button.astro";
import { Socials } from "@data/config";
import Bar from "@/assets/barcode.svg";

// Derive primary contact and the socials we want to show here
const email =
  Socials.find((s) => s.name === "mail" && s.active)?.href ??
  "mailto:rajesh@hyperoot.dev";
const linkedin =
  Socials.find((s) => s.name === "linkedin" && s.active)?.href ??
  "https://www.linkedin.com/in/rajesh-kumar-das/";
const github =
  Socials.find((s) => s.name === "github" && s.active)?.href ??
  "https://github.com/HYP3R00T/";
---

<BaseLayout>
  <section>
    <span>Let's talk</span>
    <h1>Contact Me</h1>
    <p>
      Have a role, project, or idea? I'm open to full‑time, contract, and
      collaboration. Expect pragmatic solutions, clean automation, and proactive
      comms.
    </p>
    <ul>
      <li>Response: 24-48h</li>
      <li>Timezone: IST (UTC+5:30)</li>
      <li>Remote‑friendly</li>
    </ul>
    <nav>
      <a href={email}>Email Me</a>
      <a href={linkedin} target="_blank" rel="noopener">Connect on LinkedIn</a>
    </nav>
    <Social />
  </section>

  <section>
    <article>
      <a href={email}>
        <h3>Email</h3>
        <p>
          The old-school way. I promise my inbox isn't as scary as my Kubernetes
          configs. Usually reply faster than a failed pipeline.
        </p>
      </a>
    </article>

    <article>
      <a href={linkedin} target="_blank" rel="noopener">
        <h3>LinkedIn</h3>
        <p>
          Where I pretend to be professional. Connect with me for hot takes on
          DevOps and occasional memes in the DMs.
        </p>
      </a>
    </article>

    <article>
      <a href={github} target="_blank" rel="noopener">
        <h3>GitHub</h3>
        <p>
          My digital portfolio of broken dreams and working code. Watch me
          commit crimes against git history in real-time.
        </p>
      </a>
    </article>
  </section>
</BaseLayout>
