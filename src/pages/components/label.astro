---
import BaseLayout from "@/layouts/BaseLayout.astro";
import LabelComponent from "@/components/ui/Label.astro";
import InputComponent from "@/components/ui/Input.astro";

export const metadata = {
  title: "Label",
  description: "Quick label examples for form fields.",
  category: "form",
  order: 5,
};
---

<BaseLayout
  title={`${metadata.title} - Components`}
  description={metadata.description}
>
  <main class="mx-auto max-w-4xl space-y-10 px-6 py-16 md:px-12">
    <header>
      <h1
        class="text-foreground-0 text-4xl font-extrabold uppercase"
        style="font-family: 'Space Grotesk', sans-serif;"
      >
        {metadata.title}
      </h1>
    </header>

    <section class="space-y-4">
      <h2 class="text-foreground-1 text-sm tracking-wide uppercase">Default</h2>
      <div class="space-y-2">
        <LabelComponent for="label-default">Email</LabelComponent>
        <InputComponent id="label-default" placeholder="you@example.com" />
      </div>
    </section>

    <section class="space-y-4">
      <h2 class="text-foreground-1 text-sm tracking-wide uppercase">
        Required
      </h2>
      <div class="space-y-2">
        <LabelComponent for="label-required" required>Full name</LabelComponent>
        <InputComponent
          id="label-required"
          placeholder="Enter your name"
          required
        />
      </div>
    </section>
  </main>
</BaseLayout>
