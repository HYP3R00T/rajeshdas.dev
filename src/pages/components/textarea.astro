---
import BaseLayout from "@/layouts/BaseLayout.astro";
import TextareaComponent from "@/components/ui/Textarea.astro";

export const metadata = {
  title: "Textarea",
  description: "Multi-line inputs with row control.",
  category: "form",
  order: 4,
};

const rowOptions = [3, 6, 10];
---

<BaseLayout
  title={`${metadata.title} - Components`}
  description={metadata.description}
>
  <main class="mx-auto max-w-4xl space-y-10 px-6 py-16 md:px-12">
    <header>
      <h1
        class="text-foreground-0 text-4xl font-extrabold uppercase"
        style="font-family: 'Space Grotesk', sans-serif;"
      >
        {metadata.title}
      </h1>
    </header>

    <section class="space-y-4">
      <h2 class="text-foreground-1 text-sm tracking-wide uppercase">Rows</h2>
      <div class="space-y-3">
        {
          rowOptions.map((rows) => (
            <div class="space-y-2">
              <span class="text-foreground-2 text-xs tracking-wide uppercase">
                rows={rows}
              </span>
              <TextareaComponent rows={rows} placeholder={`rows=${rows}`} />
            </div>
          ))
        }
      </div>
    </section>

    <section class="space-y-4">
      <h2 class="text-foreground-1 text-sm tracking-wide uppercase">States</h2>
      <div class="space-y-3">
        <div class="space-y-2">
          <span class="text-foreground-2 text-xs tracking-wide uppercase"
            >Default</span
          >
          <TextareaComponent placeholder="Default state" />
        </div>
        <div class="space-y-2">
          <span class="text-foreground-2 text-xs tracking-wide uppercase"
            >Disabled</span
          >
          <TextareaComponent placeholder="Disabled" disabled />
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
