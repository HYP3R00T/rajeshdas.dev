---
import Badge from "@/components/ui/Badge.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

const componentLinks = [
  { title: "Badge", href: "/components/badge" },
  { title: "Button", href: "/components/button" },
  { title: "Divider", href: "/components/divider" },
  { title: "Input", href: "/components/input" },
  { title: "Label", href: "/components/label" },
  { title: "Textarea", href: "/components/textarea" },
  { title: "Toggle Group", href: "/components/toggle-group" },
];
---

<BaseLayout
  title="Components"
  description="A concise list of the custom components available in this project."
>
  <section
    class="relative flex items-center justify-center bg-black px-4 py-12 md:px-12"
  >
    <div class="mx-auto w-full max-w-7xl">
      <!-- Greeter -->
      <div class="mb-16">
        <Badge variant="accent">Components</Badge>
        <h1 class="text-section-heading my-8">
          <div>User</div>
          <div>Interface</div>
        </h1>

        <p
          class="text-foreground-muted max-w-2xl space-y-6 text-base leading-relaxed md:text-lg"
        >
          Click a link to view the source layout for that component.
        </p>
      </div>

      <!-- All projects -->
      <div class="space-y-4">
        {
          componentLinks.map((component) => (
            <a
              href={component.href}
              class="group border-border hover:bg-background-hover flex items-center justify-between border px-6 py-5 transition-colors"
            >
              <span class="text-foreground-0 text-lg font-semibold">
                {component.title}
              </span>
              <span class="text-foreground-2 text-xs tracking-widest uppercase">
                view component
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
