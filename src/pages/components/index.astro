---
import BaseLayout from "@/layouts/BaseLayout.astro";

const componentLinks = [
  { title: "Badge", href: "/components/badge" },
  { title: "Button", href: "/components/button" },
  { title: "Divider", href: "/components/divider" },
  { title: "Icon Box", href: "/components/icon-box" },
  { title: "Input", href: "/components/input" },
  { title: "Label", href: "/components/label" },
  { title: "Textarea", href: "/components/textarea" },
  { title: "Toggle Group", href: "/components/toggle-group" },
];
---

<BaseLayout
  title="Components"
  description="A concise list of the custom components available in this project."
>
  <main class="mx-auto w-full max-w-7xl space-y-10">
    <header>
      <h1
        class="text-foreground-0 text-5xl font-extrabold uppercase"
        style="font-family: 'Space Grotesk', sans-serif; line-height: 1.1;"
      >
        Components
      </h1>
      <p class="text-foreground-1 mt-3 text-sm tracking-wide uppercase">
        Click a link to view the source layout for that component.
      </p>
    </header>

    <div class="space-y-4">
      {
        componentLinks.map((component) => (
          <a
            href={component.href}
            class="group border-border hover:border-foreground-muted hover:bg-background-hover flex items-center justify-between rounded border px-6 py-5 transition-colors"
          >
            <span class="text-foreground-0 text-lg font-semibold">
              {component.title}
            </span>
            <span class="text-foreground-2 text-xs tracking-widest uppercase">
              view component
            </span>
          </a>
        ))
      }
    </div>
  </main>
</BaseLayout>
