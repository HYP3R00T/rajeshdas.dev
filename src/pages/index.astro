---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Social from "@/components/core/Social.astro";
import { Icon } from "astro-icon/components";
import Articles from "@/components/home/Articles.astro";
import Projects from "@/components/home/Projects.astro";
---

<BaseLayout>
  <div class="flex w-full flex-col gap-12 px-6 md:max-w-4xl lg:max-w-6xl">
    <!-- Hero -->
    <section
      class="box-tr-bl-lg bg-content relative isolate w-full overflow-hidden p-6 md:p-10"
    >
      <!-- Glow accents -->
      <div
        class="bg-cyan/25 pointer-events-none absolute -top-20 -left-16 h-64 w-64 rounded-full blur-3xl"
      >
      </div>

      <div
        class="relative z-10 mx-auto flex max-w-3xl flex-col items-center text-center"
      >
        <span
          class="text-cyan/90 bg-cyan/10 px-3 py-1 text-xs font-semibold tracking-wide"
        >
          Open to opportunities
        </span>

        <h1
          class="text-text-default mt-4 text-5xl leading-tight font-extrabold md:text-6xl"
        >
          Rajesh Das
        </h1>
        <h2 class="text-text-subtle mt-2 font-mono text-2xl md:text-3xl">
          DevOps & Automation Engineer
        </h2>
        <p
          class="text-text-subtle mt-4 max-w-2xl text-base leading-relaxed text-balance md:text-lg"
        >
          I build reliable pipelines, automate cloud infra, and ship tooling
          that keeps teams fast and safe. Kubernetes, GitHub Actions, IaC,
          observabilityâ€”and a bias for boring, dependable systems.
        </p>

        <!-- CTAs -->
        <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
          <a href="/contact" aria-label="Hire Rajesh">
            <div
              class="box-tr-sm text-background bg-cyan flex h-full flex-row items-center gap-2 py-2 pr-3 pl-4 text-lg font-bold"
            >
              <span>Hire Me</span>
              <Icon name="arrow-right-up" class="h-[1.3rem] w-[1.3rem]" />
            </div>
          </a>
          <a
            href="https://hyperoot.dev/"
            aria-label="View Projects"
            target="_blank"
          >
            <div
              class="text-cyan! before:bg-cyan/30 relative overflow-hidden px-4 py-2 text-lg font-bold before:absolute before:inset-0 before:-z-10 before:origin-right before:scale-x-0 before:transition-transform before:duration-300 before:ease-in-out hover:bg-transparent! hover:before:origin-left hover:before:scale-x-100"
            >
              <span class="inline-flex items-center gap-2">
                <Icon name="git-branch" class="h-5 w-5 opacity-90" />
                Projects
              </span>
            </div>
          </a>
        </div>

        <!-- Social inline -->
        <div class="mt-8 w-full">
          <Social />
        </div>
      </div>
    </section>

    <!-- Articles -->
    <section class="w-full items-center justify-center">
      <Articles />
    </section>

    <!-- Projects -->
    <!-- <section class="w-full items-center justify-center">
      <Projects />
    </section> -->
  </div>
</BaseLayout>
