---
interface Props {
  class?: string;
}
const { class: className } = Astro.props as Props;
---

<div
  class={`panel relative overflow-hidden rounded-2xl border border-border bg-background-2/60 ${className ?? ""}`.trim()}
>
  <div class="overlay" aria-hidden="true"></div>
  <slot />
</div>

<style>
  .panel {
    position: relative;
  }
  .overlay {
    position: absolute;
    inset: 0;
    opacity: 0.7;
    pointer-events: none;
    background:
      radial-gradient(
        600px circle at 15% 20%,
        rgba(59, 130, 246, 0.12),
        transparent 60%
      ),
      radial-gradient(
        600px circle at 85% 80%,
        rgba(59, 130, 246, 0.12),
        transparent 60%
      );
    transition:
      transform 400ms ease,
      opacity 400ms ease,
      filter 400ms ease;
  }
  .panel:hover .overlay {
    transform: translate3d(6px, -6px, 0) scale(1.02);
    opacity: 0.85;
    filter: saturate(1.12);
  }
</style>
