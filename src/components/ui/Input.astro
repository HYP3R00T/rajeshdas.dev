---
import type { HTMLAttributes } from "astro/types";

type InputType =
  | "text"
  | "email"
  | "password"
  | "number"
  | "tel"
  | "url"
  | "search"
  | "date"
  | "time";

interface InputProps extends HTMLAttributes<"input"> {
  type?: InputType;
  placeholder?: string;
  disabled?: boolean;
  class?: string;
  value?: string | number;
  name?: string;
  id?: string;
  required?: boolean;
}

const {
  type = "text",
  placeholder = "",
  disabled = false,
  class: className,
  value,
  name,
  id,
  required = false,
  ...rest
} = Astro.props as InputProps;

const baseClasses =
  "w-full border bg-transparent px-4 py-4 text-sm transition-colors focus:outline-none";

const borderClasses = "border-border-strong";
const textClasses = "text-foreground-0";
const placeholderClasses = "placeholder:text-background-input";
const focusClasses = "focus:border-foreground-0";
const disabledClasses = disabled ? "opacity-50 cursor-not-allowed" : "";

const classes = [
  baseClasses,
  borderClasses,
  textClasses,
  placeholderClasses,
  focusClasses,
  disabledClasses,
  className?.trim(),
]
  .filter(Boolean)
  .join(" ");
---

<input
  type={type}
  placeholder={placeholder}
  disabled={disabled}
  class={classes}
  value={value}
  name={name}
  id={id}
  required={required}
  {...rest}
/>
