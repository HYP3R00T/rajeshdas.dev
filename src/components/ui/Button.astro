---
import type { HTMLAttributes } from "astro/types";

type ButtonVariant = "default" | "outline" | "secondary" | "ghost" | "link";
type ButtonSize = "default" | "sm" | "lg" | "icon" | "icon-sm" | "icon-lg";

interface ButtonProps extends HTMLAttributes<"button" | "a"> {
  variant?: ButtonVariant;
  size?: ButtonSize;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  class?: string;
  href?: string;
  rel?: string;
  target?: string;
}

const {
  variant = "default",
  size = "default",
  type = "button",
  disabled = false,
  class: className,
  href,
  rel,
  target,
  ...rest
} = Astro.props as ButtonProps & HTMLAttributes<"button" | "a">;

const baseClasses =
  "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50 disabled:pointer-events-none disabled:opacity-50";

const sizeClasses: Record<ButtonSize, string> = {
  default: "h-9 px-4 py-2",
  sm: "h-8 px-3 text-xs",
  lg: "h-10 px-8",
  icon: "h-9 w-9 p-0",
  "icon-sm": "h-8 w-8 p-0",
  "icon-lg": "h-10 w-10 p-0",
};

const variantClasses: Record<ButtonVariant, string> = {
  default: "bg-background-1 text-foreground-1",
  outline:
    "border border-border bg-transparent hover:bg-background-2 hover:text-accent",
  secondary: "bg-content text-foreground-0 hover:bg-background-1",
  ghost: "bg-transparent hover:bg-background-2 hover:text-accent",
  link: "text-accent underline-offset-4 hover:underline bg-transparent",
};

const classes = [
  baseClasses,
  sizeClasses[size] ?? sizeClasses.default,
  variantClasses[variant] ?? variantClasses.default,
  className?.trim(),
  disabled ? "opacity-50 pointer-events-none cursor-not-allowed" : "",
]
  .filter(Boolean)
  .join(" ");

const Tag = href ? "a" : "button";

const componentProps: Record<string, unknown> = {
  class: classes,
  ...rest,
};

if (href) {
  componentProps.href = href;
  if (rel) componentProps.rel = rel;
  if (target) componentProps.target = target;
} else {
  componentProps.type = type;
  componentProps.disabled = disabled;
}
---

<Tag {...componentProps}>
  <slot />
</Tag>
