---
import { Icon } from "astro-icon/components";

interface Props {
  icon?: string;
  title: string;
  description: string;
}

const { icon = "github", title, description } = Astro.props;
---

<div class="group space-y-3">
  <div class="flex items-center gap-3">
    <div
      class="bg-cyan/10 text-cyan rounded-full p-2 transition-transform group-hover:scale-110"
    >
      <Icon name={icon} class="h-6 w-6" />
    </div>
    <h3 class="text-text-default text-lg font-semibold">
      {title}
    </h3>
  </div>
  <p class="text-text-subtle text-sm leading-relaxed">
    {description}
  </p>
</div>
