---
// Skills Section Component
// Displays categorized tech stack in a 3-column grid with icons and items
import { Icon } from "astro-icon/components";

const skills = [
  {
    id: "01",
    title: "CLOUD PLATFORMS",
    icon: "github", // TODO: Change to cloud.svg
    items: ["AWS", "Azure", "GCP", "DigitalOcean"],
  },
  {
    id: "02",
    title: "CONTAINERS",
    icon: "kubernetes",
    items: ["Docker", "Kubernetes", "Helm", "Podman"],
  },
  {
    id: "03",
    title: "CI/CD",
    icon: "github", // TODO: Change to lightning.svg or zap.svg
    items: ["GitHub Actions", "Jenkins", "GitLab CI", "ArgoCD"],
  },
  {
    id: "04",
    title: "VERSION CONTROL",
    icon: "file-text",
    items: ["Git", "GitHub", "GitLab", "Bitbucket"],
  },
  {
    id: "05",
    title: "INFRASTRUCTURE AS CODE",
    icon: "github", // TODO: Change to check-circle.svg
    items: ["Terraform", "Ansible", "CloudFormation", "Pulumi"],
  },
  {
    id: "06",
    title: "MONITORING",
    icon: "github", // TODO: Change to check-circle.svg
    items: ["Prometheus", "Grafana", "ELK Stack", "Datadog"],
  },
];
---

<section class="relative bg-black px-6 py-32 md:px-12">
  <div class="mx-auto max-w-350">
    <div class="mb-20">
      <div class="text-section-label mb-4">Tech Stack</div>
      <h2 class="text-section-heading mb-8 text-white">EXPERTISE</h2>
      <p
        class="max-w-2xl text-sm tracking-wide text-white/60 uppercase md:text-base"
      >
        Technologies and tools I use to build reliable, scalable infrastructure
      </p>
    </div>

    <div class="bg-border p-px">
      <div class="bg-border grid gap-px md:grid-cols-2 lg:grid-cols-3">
        {
          skills.map((skill) => (
            <div class="bg-black p-8 transition-colors hover:bg-white/5">
              <div class="mb-6 flex items-start justify-between">
                <div class="border-border-strong border p-3">
                  <Icon name={skill.icon} class="h-6 w-6 text-white" />
                </div>
                <div class="text-sm text-white/20">{skill.id}</div>
              </div>

              <h3
                class="mb-6 text-lg tracking-wide text-white uppercase"
                style="font-family: 'Space Grotesk', sans-serif; font-weight: 600;"
              >
                {skill.title}
              </h3>

              <ul class="space-y-2">
                {skill.items.map((item) => (
                  <li class="text-xs tracking-wide text-white/60">{item}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
