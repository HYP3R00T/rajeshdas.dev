---
import { Icon } from "astro-icon/components";
import Button from "@/components/ui/Button.astro";

interface Props {
  id: string;
  title: string;
  icon: string;
  items: string[];
}

const { id, title, icon, items } = Astro.props;
---

<div
  class="border-border hover:bg-background-1/50 relative border bg-transparent p-8 transition-all hover:z-10"
  style="margin-right: -1px; margin-bottom: -1px;"
>
  <div class="mb-6 flex items-start justify-between">
    <Button as="div" variant="outline" size="icon-lg">
      <Icon name={icon} class="text-foreground-0 size-6" />
    </Button>
    <div class="text-foreground-3 text-sm">{id}</div>
  </div>

  <h3
    class="font-display text-foreground-0 mb-6 font-semibold tracking-wide uppercase"
  >
    {title}
  </h3>

  <ul class="space-y-2">
    {
      items.map((item) => (
        <li class="text-foreground-1 text-xs tracking-wide">{item}</li>
      ))
    }
  </ul>
</div>
