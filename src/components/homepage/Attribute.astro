---
import { Icon } from "astro-icon/components";
import Button from "@/components/ui/Button.astro";

interface Props {
  title: string;
  icon: string;
  description: string;
}

const { title, icon, description } = Astro.props;
---

<div
  class="border-border-strong hover:bg-background-hover/50 border bg-black p-6 transition-colors"
>
  <div class="flex gap-4">
    <Button as="div" variant="outline" size="icon-lg">
      <Icon name={icon} class="text-foreground-0 h-5 w-5" />
    </Button>
    <div>
      <h3
        class="font-display text-foreground-0 mb-2 font-medium tracking-wide text-balance uppercase"
      >
        {title}
      </h3>
      <p class="text-foreground-1 pt-2 text-sm leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</div>
