---
import { Icon } from "astro-icon/components";
import IconBox from "@/components/ui/IconBox.astro";
import Badge from "@/components/ui/Badge.astro";

const attributes = [
  {
    title: "Automation First",
    icon: "zap",
    description:
      "If it can be automated, it should be. Building tools that eliminate repetitive tasks.",
  },
  {
    title: "Open Source",
    icon: "code",
    description:
      "Contributing to the community and sharing knowledge through open-source projects.",
  },
  {
    title: "Cloud Native",
    icon: "git-branch",
    description:
      "Designing scalable, resilient infrastructure for modern distributed systems.",
  },
];
---

<section
  class="stripe-pattern-dense relative flex items-center justify-center px-4 py-12 md:px-12"
>
  <div class="mx-auto w-full max-w-7xl">
    <div class="mb-20 space-y-8">
      <!-- Badge -->
      <Badge variant="accent">DevOps Engineer</Badge>

      <!-- Main Grid Layout -->
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-20">
        <!-- Left Column - Main Content -->
        <div>
          <!-- Main Heading -->
          <h1
            class="text-foreground-0 mb-8 text-left font-mono text-[clamp(3rem,10vw,7rem)] leading-[0.9] tracking-tighter uppercase"
          >
            <div>RAJESH</div>
            <div>DAS</div>
          </h1>

          <!-- Subtitle -->
          <div class="max-w-xl space-y-6">
            <p
              class="text-foreground-muted text-base leading-relaxed md:text-lg"
            >
              Building robust infrastructure and automation tools that empower
              development teams. Specialized in cloud architecture, CI/CD
              pipelines, and developer experience.
            </p>
            <p class="text-foreground-1 text-sm leading-relaxed">
              From infrastructure as code to container orchestration, I focus on
              creating reliable, scalable systems that let teams ship faster and
              sleep better.
            </p>
          </div>
        </div>

        <!-- Right Column - Attributes -->
        <div class="space-y-4">
          {
            attributes.map((attribute) => (
              <div class="border-border-strong hover:bg-background-hover border bg-black p-6 transition-colors">
                <div class="flex gap-4">
                  <IconBox variant="strong">
                    <Icon
                      name={attribute.icon}
                      class="text-foreground-0 h-5 w-5"
                    />
                  </IconBox>
                  <div>
                    <h3 class="font-display text-foreground-0 mb-2 text-base tracking-wide uppercase">
                      {attribute.title}
                    </h3>
                    <p class="text-foreground-1 text-sm leading-relaxed">
                      {attribute.description}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2">
      <div
        class="text-foreground-3 flex animate-bounce flex-col items-center gap-2"
      >
        <Icon name="chevron-down-double" class="size-6" />
      </div>
    </div>
  </div>
</section>
