---
// Header Component - Navigation and branding
import { SITE, navItems } from "@data/config";
import MobileMenuToggle from "./MobileMenuToggle.astro";
import MobileMenuPanel from "./MobileMenuPanel.astro";
---

<header class="border-border fixed top-0 right-0 left-0 z-50 border-b bg-black">
  <nav class="mx-auto max-w-350 px-6 py-6 md:px-12">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a
        href="/"
        class="text-sm tracking-tight text-white transition-opacity hover:opacity-70 md:text-base"
      >
        rajesh-das
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden items-center gap-8 md:flex">
        {
          navItems
            .filter((item) => !item.special)
            .map((item) => (
              <a
                href={item.href}
                target={item.blank ? "_blank" : undefined}
                rel={item.blank ? "noopener noreferrer" : undefined}
                class="text-xs tracking-wider text-white/60 uppercase transition-colors hover:text-white"
              >
                {item.label}
              </a>
            ))
        }
      </div>

      <!-- Desktop CTA Button -->
      <a
        href="#contact"
        class="hidden border border-white bg-white px-6 py-3 text-xs font-medium tracking-wider text-black uppercase transition-colors hover:bg-black hover:text-white md:block"
      >
        GET IN TOUCH
      </a>

      <!-- Mobile Menu Toggle -->
      <MobileMenuToggle />
    </div>
  </nav>
</header>

<!-- Mobile Menu Panel -->
<MobileMenuPanel navItems={navItems.filter((item) => !item.special)} />
