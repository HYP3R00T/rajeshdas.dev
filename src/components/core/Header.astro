---
// Header Component - Navigation and branding
import { SITE, navItems } from "@data/config";
import MobileMenuToggle from "./MobileMenuToggle.astro";
import MobileMenuPanel from "./MobileMenuPanel.astro";
---

<header
  class="border-border fixed top-0 right-0 left-0 z-50 flex h-24 items-center justify-center border-b bg-black px-4 py-12 md:px-12"
>
  <nav class="mx-auto w-full max-w-7xl">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a
        href="/"
        class="text-foreground-0 text-sm tracking-tight transition-opacity hover:opacity-70 md:text-base"
      >
        rajesh-das
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden items-center gap-8 md:flex">
        {
          navItems
            .filter((item) => !item.special)
            .map((item) => (
              <a
                href={item.href}
                target={item.blank ? "_blank" : undefined}
                rel={item.blank ? "noopener noreferrer" : undefined}
                class="text-foreground-1 hover:text-foreground-0 text-xs tracking-wider uppercase transition-colors"
              >
                {item.label}
              </a>
            ))
        }
      </div>

      <!-- Desktop CTA Button -->
      <a
        href="#contact"
        class="border-foreground-0 bg-foreground-0 hover:text-foreground-0 hidden border px-6 py-3 text-xs font-medium tracking-wider text-black uppercase transition-colors hover:bg-black md:block"
      >
        GET IN TOUCH
      </a>

      <!-- Mobile Menu Toggle -->
      <MobileMenuToggle />
    </div>
  </nav>
</header>

<!-- Mobile Menu Panel -->
<MobileMenuPanel navItems={navItems.filter((item) => !item.special)} />
