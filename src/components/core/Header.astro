---
type NavLink = { href: string; label: string };

const { title = "Rajesh Das", links = [] as NavLink[] } = Astro.props;

const nav: NavLink[] = links.length
  ? links
  : [
      { href: "/", label: "Home" },
      { href: "/post", label: "Post" },
      { href: "/post", label: "Post" },
      { href: "/post", label: "Post" },
    ];
---

<header
  class="border-border bg-background sticky top-0 z-50 h-24 w-full border-b"
>
  <div class="flex h-full w-full flex-row">
    <div class="border-border flex w-2/5 flex-row border-r">
      <div class="border-border flex w-32 items-center justify-center border-r">
        <a href="/" class="" aria-label={title}>
          {title}
        </a>
      </div>
    </div>
    <div class="flex w-3/5 items-center">
      <div class="flex h-full w-full flex-row">
        {
          nav.map((item) => (
            <div class="border-border flex w-full border-r last:border-none">
              <a
                href={item.href}
                class="text-text-faint hover:bg-content flex h-full w-full items-center justify-center"
              >
                {item.label}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</header>
