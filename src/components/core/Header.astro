---
import { SITE, navItems } from "@data/config";
import Button from "@/components/ui/Button.astro";
import MobileMenuToggle from "@/components/core/MobileMenuToggle.astro";
import MobileMenuPanel from "@/components/core/MobileMenuPanel.astro";
---

<header class="bg-background-0 border-border sticky top-0 z-50 border-b">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
    <a href="/" class="flex items-center gap-3">
      <span class="text-lg font-semibold">{SITE.title}</span>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden items-center gap-4 md:flex">
      {
        navItems.map((item) => (
          <Button
            href={item.href}
            variant="accent"
            target={item.blank ? "_blank" : undefined}
            rel={item.blank ? "noopener noreferrer" : undefined}
          >
            {item.label}
          </Button>
        ))
      }
    </nav>

    <!-- Mobile toggle (buttons) -->
    <MobileMenuToggle />
  </div>

  <!-- Mobile menu panel (below header row) -->
  <MobileMenuPanel navItems={navItems} />
</header>
