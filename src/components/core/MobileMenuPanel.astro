---
import Button from "@/components/ui/Button.astro";

interface Props {
  navItems: Array<{ label: string; href: string; blank?: boolean }>;
}

const { navItems } = Astro.props as Props;
---

<!-- Panel (full-screen overlay below header) -->
<div
  id="mobile-menu"
  data-mobile-menu
  class="bg-background-0 fixed inset-x-0 top-0 z-50 hidden overflow-auto backdrop-blur-sm md:hidden"
  role="dialog"
  aria-modal="true"
  aria-hidden="true"
>
  <div class="mx-auto p-4">
    <nav class="flex flex-col gap-2">
      {
        navItems.map((item) => (
          <Button
            href={item.href}
            variant="accent"
            size="default"
            target={item.blank ? "_blank" : undefined}
            rel={item.blank ? "noopener noreferrer" : undefined}
          >
            {item.label}
          </Button>
        ))
      }
    </nav>
  </div>
</div>
