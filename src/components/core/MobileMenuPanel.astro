---
interface Props {
  navItems: Array<{ label: string; href: string; blank?: boolean }>;
}

const { navItems } = Astro.props as Props;
---

<!-- Panel (full-screen overlay below header). Visibility controlled via data-open attr -->
<div
  id="mobile-menu"
  data-mobile-menu
  data-open="false"
  class="border-border pointer-events-none fixed inset-x-0 top-0 z-40 overflow-auto border-t bg-black opacity-0 transition duration-150 ease-out data-[open=true]:pointer-events-auto data-[open=true]:translate-y-0 data-[open=true]:opacity-100 md:hidden"
  role="dialog"
  aria-modal="true"
  aria-hidden="true"
>
  <div class="px-6 py-8">
    <nav class="space-y-4">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            target={item.blank ? "_blank" : undefined}
            rel={item.blank ? "noopener noreferrer" : undefined}
            class="block text-sm tracking-wider text-white/60 uppercase transition-colors hover:text-white"
          >
            {item.label}
          </a>
        ))
      }
      <a
        href="#contact"
        class="mt-6 block border border-white bg-white px-6 py-3 text-center text-xs font-medium tracking-wider text-black uppercase transition-colors hover:bg-black hover:text-white"
      >
        GET IN TOUCH
      </a>
    </nav>
  </div>
</div>
