---
// Footer Component - Site footer with navigation, social links, and info
import { Icon } from "astro-icon/components";
import { footerNavigation, footerSocialLinks } from "@data/config";
---

<footer class="border-border relative border-t bg-black px-6 py-16 md:px-12">
  <div class="mx-auto max-w-350">
    <div class="mb-16 grid gap-12 md:grid-cols-2">
      <!-- Site Info -->
      <div>
        <h3
          class="text-foreground-0 mb-4 text-2xl"
          style="font-family: 'Space Grotesk', sans-serif; font-weight: 600;"
        >
          rajesh-das
        </h3>
        <p class="text-foreground-1 max-w-md text-sm">
          DevOps Engineer specializing in cloud infrastructure, automation, and
          developer experience.
        </p>
      </div>

      <!-- Navigation and Social Links -->
      <div class="grid grid-cols-2 gap-8">
        <!-- Navigate -->
        <div>
          <div class="text-section-label mb-4">Navigate</div>
          <nav class="space-y-2">
            {
              footerNavigation.map((item) => (
                <a
                  href={item.href}
                  class="text-foreground-1 hover:text-foreground-0 block text-sm transition-colors"
                  target={item.blank ? "_blank" : undefined}
                  rel={item.blank ? "noopener noreferrer" : undefined}
                >
                  {item.label}
                </a>
              ))
            }
          </nav>
        </div>

        <!-- Connect -->
        <div>
          <div class="text-section-label mb-4">Connect</div>
          <nav class="space-y-2">
            {
              footerSocialLinks.map((link) => (
                <a
                  href={link.href}
                  class="text-foreground-1 hover:text-foreground-0 block text-sm transition-colors"
                  title={link.linkTitle}
                  target={link.name !== "email" ? "_blank" : undefined}
                  rel={
                    link.name !== "email" ? "noopener noreferrer" : undefined
                  }
                >
                  {link.label}
                </a>
              ))
            }
          </nav>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div
      class="border-border flex flex-col items-center gap-4 border-t pt-8 md:flex-row md:justify-between"
    >
      <div class="text-foreground-2 text-xs">
        Â© {new Date().getFullYear()} RAJESH DAS. ALL RIGHTS RESERVED.
      </div>

      <div class="text-foreground-2 text-xs">
        BUILT WITH ASTRO + TAILWIND CSS
      </div>
    </div>
  </div>
</footer>

<!-- Scroll to Top Button -->
<button
  id="scroll-to-top"
  class="border-foreground-0 bg-foreground-0 hover:text-foreground-0 fixed right-8 bottom-8 z-40 hidden border p-4 text-black transition-colors hover:bg-black"
  aria-label="Scroll to top"
  title="Back to top"
>
  <Icon name="arrow-up" />
</button>

<script>
  const scrollToTopBtn = document.getElementById("scroll-to-top");

  if (scrollToTopBtn) {
    // Show/hide button on scroll
    window.addEventListener("scroll", () => {
      if (window.scrollY > 500) {
        scrollToTopBtn.classList.remove("hidden");
      } else {
        scrollToTopBtn.classList.add("hidden");
      }
    });

    // Scroll to top on click
    scrollToTopBtn.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  }
</script>
